<div class="my-5">
  <div class="col-md-6">
    <div class="card card-body m-auto" style="width: 500px;">
      <h1 class="text-center mt-3">登入</h1>
      {{> message}}
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="請輸入 Email">
        </div>
        <div class="form-group mt-3">
          <label for="password">密碼</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="請輸入密碼">
        </div>
        <button type="submit" class="btn btn-secondary btn-block mt-4 mb-2" style="width: 100%;">登入</button>
      </form>
      <p class="lead mt-4">
        沒有帳號?<a href="/users/register">註冊</a>
      </p>
    </div>
  </div>
</div>